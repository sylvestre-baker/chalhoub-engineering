{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Docker",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}", // Ajustez si nécessaire
            "remoteRoot": "/dist", // Ajustez selon le chemin dans votre conteneur où se trouve le code
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
